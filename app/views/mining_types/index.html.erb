<p id="notice"><%= notice %></p>

<h1><%= t("titles.mining_types") %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t("columns.description") %></th>
      <th><%= t("columns.acronym") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t("links.show"), mining_type %></td>
        <td><%= link_to t("links.edit"), edit_mining_type_path(mining_type) %></td>
        <td><%= link_to t("links.delete"), mining_type, method: :delete, data: { confirm: t("alerts.are_you_sure") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("links.new_mining_type"), new_mining_type_path %>
