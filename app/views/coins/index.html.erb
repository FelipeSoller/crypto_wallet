<div class="h-100 p-5 bg-light rounded-3">
  <p id="notice"><%= notice %></p>

  <h1><%= t("titles.coins") %></h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= t("columns.description") %></th>
        <th><%= t("columns.acronym") %></th>
        <th><%= t("columns.image") %></th>
        <th><%= t("columns.mining_type") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @coins.each do |coin| %>
        <tr>
          <td class="align-middle"><%= coin.description %></td>
          <td class="align-middle"><%= coin.acronym %></td>
          <td class="align-middle">
            <%= image_tag coin.url_image, width: 30, height: 30 %>
          </td>
          <td class="align-middle"><%= coin.mining_type.description %></td>
          <td><%= link_to t("links.show"), coin, type:"button", class:"btn btn-primary" %></td>
          <td><%= link_to t("links.edit"), edit_coin_path(coin), type:"button", class:"btn btn-primary" %></td>
          <td><%= link_to t("links.delete"), coin, method: :delete, data: { confirm: t("alerts.are_you_sure") }, type:"button", class:"btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to t("links.new_coin"), new_coin_path, type:"button", class:"btn btn-primary"  %>
</div>