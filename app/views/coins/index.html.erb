<p id="notice"><%= notice %></p>

<h1><%= t("titles.coins") %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("columns.description") %></th>
      <th><%= t("columns.acronym") %></th>
      <th><%= t("columns.image") %></th>
      <th><%= t("columns.mining_type") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td>
          <%= image_tag coin.url_image, width: 30, height: 30 %>
        </td>
        <td><%= coin.mining_type.description %></td>
        <td><%= link_to t("links.show"), coin %></td>
        <td><%= link_to t("links.edit"), edit_coin_path(coin) %></td>
        <td><%= link_to t("links.delete"), coin, method: :delete, data: { confirm: t("alerts.are_you_sure") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("links.new_coin"), new_coin_path %>
